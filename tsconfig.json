{
  "compilerOptions": {
    "baseUrl": "src",
    "lib": ["es6", "dom"],
    "types": ["node", "mongoose", "express"],
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "*": ["node_modules/*"],
      "@constants/*": ["constants/*"],
      "@controllers/*": ["controllers/*"],
      "@enums/*": ["enums/*"],
      "@interfaces/*": ["interfaces/*"],
      "@repository/*": ["repository/*"],
      "@schemas/*": ["schemas/*"],
      "@scraping/*": ["scraping/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*.ts", "public/*"],
  "exclude": ["node_modules"]
}
